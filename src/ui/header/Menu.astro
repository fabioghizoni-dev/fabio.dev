---
import { Icon } from "astro-icon/components";
import cn from "../../utils";
import UnderlineButton from "../UnderlineButton.astro";

const ulClass = cn(
  `hidden md:flex flex-col md:flex-row p-6 md:p-0 justify-center items-center text-xl ml-auto font-bold text-white font-cascadia-code gap-8`,
);
---

<>
  <button
    id="menu"
    role="button"
    class="group relative flex h-6 w-8 cursor-pointer flex-col items-center justify-between p-0.5 md:hidden"
  >
    <div
      class="from-purple-default to-purple-blue h-0.9 min-h-0.9 w-9/12 self-end rounded-full bg-linear-to-r transition-[width] duration-300 ease-in-out group-hover:w-full"
    >
    </div>
    <div
      class="from-purple-default to-purple-blue h-0.9 min-h-0.9 w-full self-end rounded-full bg-linear-to-r transition-[width] duration-300 ease-in-out group-hover:w-9/12"
    >
    </div>
    <div
      class="from-purple-default to-purple-blue h-0.9 min-h-0.9 w-full rounded-full bg-linear-to-r"
    >
    </div>
  </button>

  <ul id="list-menu" class={ulClass}>
    <Icon
      data-menu-close
      title="Close modal"
      aria-label="Close modal"
      name="line-md:menu-to-close-transition"
      class={cn(`md:hidden size-6 text-gray-500 hover:text-purple-blue dark:hover:text-gray-300 cursor-pointer 
        transition-colors ease-in-out duration-200`)}
    />
    <li><UnderlineButton>Home</UnderlineButton></li>
    <li>
      <UnderlineButton id="li-about-me" title="Go to about section">
        About me
      </UnderlineButton>
    </li>
    <li>
      <UnderlineButton id="li-contact-me" title="Go to contact section">
        Contact me
      </UnderlineButton>
    </li>
  </ul>
</>

<script src="../../scripts/menu.ts"></script>
