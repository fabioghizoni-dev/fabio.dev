---
import { Icon } from "astro-icon/components";
import cn from "../utils/cn";

interface Props extends astroHTML.JSX.HTMLAttributes {
  id?: string;
}

const { id = "first-modal" } = Astro.props as Props;
---

<div
  id={id}
  role="dialog"
  aria-modal="true"
  data-modal-backdrop
  aria-label="Welcome modal"
  class="fixed inset-0 hidden items-center justify-center bg-black/50 z-50 p-4"
>
  <div
    class="bg-white dark:bg-gray-default rounded-lg shadow-xl max-w-2xl w-full p-5 relative"
  >
    <Icon
      data-modal-close
      aria-label="Fechar modal"
      name="line-md:menu-to-close-transition"
      class={cn(`absolute top-2 right-2 size-6 text-gray-500 hover:text-purple-blue 
        dark:hover:text-gray-300 cursor-pointer transition-colors ease-in-out duration-200`)}
    />
    <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
      Welcome to my website
    </h2>

    <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-4">
      This website is still under development, therefore it may contain
      incomplete components and information. I thank you for your understanding!
    </p>

    <div class="flex justify-end gap-3">
      <button
        data-modal-ok
        class="bg-purple-600 hover:bg-purple-700 dark:bg-purple-700 dark:hover:bg-purple-600 text-white
          px-4 py-2 rounded-md font-medium cursor-pointer transition-colors ease-in-out duration-200"
      >
        Okay, continue
      </button>
    </div>
  </div>
</div>

<script src="../scripts/Modal.ts"></script>
