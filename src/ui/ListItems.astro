---
interface Props {
  id?: string;
  class?: string;
  role?: astroHTML.JSX.HTMLAttributes["role"];
}

const { role = "list", id = "ul-home", class: className = "hidden md:flex" } = Astro.props as Props;

const baseClass = "justify-center items-center ml-auto text-xl font-bold text-white font-cascadia-code gap-8";
---

<ul role={role} id={id} class=`${baseClass} ${className}`>
  <slot />
</ul>

<div class={`flex md:hidden ${className}`}></div>
