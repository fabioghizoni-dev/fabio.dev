---
import Monitor from "../ui/Monitor.astro";
const f = [
  "███████╗",
  "██╔════╝",
  "█████╗  ",
  "██╔══╝  ",
  "██║     ",
  "╚═╝     "
];
const a = [
  " █████╗ ",
  "██╔══██╗",
  "███████║",
  "██╔══██║",
  "██║  ██║",
  "╚═╝  ╚═╝"
];
const b = [
  "██████╗ ",
  "██╔══██╗",
  "██████╔╝",
  "██╔══██╗",
  "██████╔╝",
  "╚═════╝ "
];
const i = [
  "██╗",
  "██║",
  "██║",
  "██║",
  "██║",
  "╚═╝"
];
const o = [
  " ██████╗ ",
  "██╔═══██╗",
  "██║   ██║",
  "██║   ██║",
  "╚██████╔╝",
  " ╚═════╝ "
];
const bar = [
  "█╗",
  "█║",
  "█║",
  "█║",
  "█║",
  "█║",
  "█╝"
];
const barArt = bar.join("\n");
const fabioArt = f.map((_, y) => `${f[y]} ${a[y]} ${b[y]} ${i[y]} ${o[y]}`).join("\n");
---

<section class="flex w-full min-h-screen justify-center items-center pt-12 gap-24">
  <h1 class="bg-white text-5xl text-center font-noto-sans-jp gap-4">
    Hello World!! 
    <span class="animate-blur transition-all duration-300 ease-in-out">My name is</span>
    <div class="flex bg-gradient-to-br bg-clip-text text-transparent from-purple-500 to-orange-500 text-lg font-black 
      leading-none justify-center items-center">
      <pre id="ascii" translate="no" class="">{fabioArt}</pre>
      <pre id="bar" translate="no" class="animate-opacity transition-opacity duration-500 ease-in-out">{barArt}</pre>
    </div>
  </h1>
  <Monitor />
</section>