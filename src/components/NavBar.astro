---
const alt = "Logo Fábio Ghizoni";
import { Image } from "astro:assets";
import logo from "../../public/Logo.svg";
const title = "Voltar para a página inicial";
import SwitchLang from "../ui/SwitchLang.astro";
import SwitchTheme from "../ui/SwitchTheme.astro";
---

<nav
  class="flex bg-white/20 w-full fixed top-0 justify-between items-center p-1 z-1 backdrop-blur-3xl"
>
  <Image
    alt={alt}
    src={logo}
    width={80}
    height={80}
    title={title}
    loading="eager"
    onclick="goHome()"
    class="w-20 cursor-pointer animate-show-logo"
  />
  <SwitchTheme />
  <SwitchLang />
</nav>

<script is:inline>
  function goHome() {
    if (window.location.pathname !== "/") {
      window.location.href = "/";
    }
  }
</script>
