---
import { barArt, fabioArt, keywords } from "../ui/AsciiArts";
const helloWorld = ["O", "l", "รก\u00A0", "m", "u", "n", "d", "o", "!", "!"];
---

<h1 class="flex flex-col text-4xl text-left font-cascadia-code font-black justify-center items-start gap-4">
  <p id="hello-world" class="inline text-gray-800">
    {
      helloWorld.map((letter, i) => (
        <span style={`animation-delay: ${i * 0.2}s;`} class="inline-block opacity-0 animate-char">
          {letter}
        </span>
      ))
    }
    <span id="keywords" class="inline-block animate-blur transition-all duration-500 ease-in-out">{keywords[0]}</span>
  </p>
  <div
    translate="no"
    class="flex bg-gradient-to-br bg-clip-text text-transparent from-blue-700 to-rose-500 text-xs
      sm:text-sm md:text-base lg:text-lg leading-none tracking-tight justify-center items-center"
  >
    <pre id="ascii-art" class="">{fabioArt}</pre>
    <pre id="bar" class="animate-opacity transition-opacity duration-500 ease-in-out">{barArt}</pre>
  </div>
</h1>

<script>
  import { animateAsciiText } from "../ui/AsciiArts";
  animateAsciiText();
</script>
