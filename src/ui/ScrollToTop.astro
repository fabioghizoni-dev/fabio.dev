---
import { Icon } from "astro-icon/components";
---

<Icon
  id="arrow-up"
  name="ep:arrow-up-bold"
  class=`fixed opacity-0 w-12 h-12 bg-black/50 text-purple-blue right-4 bottom-4 rounded-full p-1 transition-all ease-in-out 
    duration-500`
/>

<script is:inline>
  const arrowUp = document.getElementById("arrow-up");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 200) {
      arrowUp.classList.add("animate-show-y-bottom");
      arrowUp.classList.remove("animate-hide-y-bottom");
    } else {
      arrowUp.classList.add("animate-hide-y-bottom");
      arrowUp.classList.remove("animate-show-y-bottom");
    }
  });
  arrowUp.addEventListener("click", () => {
    if (window.scrollY > 0) {
      window.scrollTo({ top: 0, behavior: "smooth" });
    }
  });
</script>
