---
import p from "../constants/personal";
import Layout from "../layouts/Layout.astro";
import Education from "../ui/curriculum/Education.astro";
import Experience from "../ui/curriculum/Experience.astro";
import Header from "../ui/curriculum/Header.astro";
import Skills from "../ui/curriculum/Skills.astro";

const description = `Page Curriculum | Resume page containing all professional and academic information of ${p.name}`;
---

<Layout
  title=`Curriculum | ${p.name}`
  description={description}
  bodyClass="*:w-6xl *:max-w-6xl justify-center gap-8 dark:text-white font-space-grotesk"
>
  <Header />
  <Experience />
  <Education />
  <Skills />
</Layout>
